<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="com.service_kluch.nmedia.ui.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed">
        <action
            android:id="@+id/action_feedFragment_to_newPostFragment"
            app:destination="@id/newPostFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
        <action
            android:id="@+id/action_feedFragment_to_onePostFragment"
            app:destination="@id/onePostFragment" />

    </fragment>
    <fragment
        android:id="@+id/newPostFragment"
        android:name="com.service_kluch.nmedia.ui.NewPostFragment"
        android:label="fragment_new_post"
        tools:layout="@layout/fragment_new_post" />
    <fragment
        android:id="@+id/onePostFragment"
        android:name="com.service_kluch.nmedia.ui.EditPostFragment"
        android:label="fragment_one_post"
        tools:layout="@layout/fragment_one_post" >
        <action
            android:id="@+id/action_onePostFragment_to_newPostFragment"
            app:destination="@id/newPostFragment" />
        <action
            android:id="@+id/action_onePostFragment_to_feedFragment"
            app:destination="@id/feedFragment" />
    </fragment>
</navigation>